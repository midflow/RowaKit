{
  "name": "@rowakit/table",
  "version": "1.0.0",
  "private": false,
  "description": "React Table Toolkit for server-side data: Table + QueryToolbar + ActionBar with pagination, sorting, filtering, URL sync, saved views, and CSV export for admin & data-heavy apps",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./src/styles/index.css",
    "./styles/*": "./src/styles/*.css"
  },
  "files": [
    "dist",
    "src/styles",
    "src/components/**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run --passWithNoTests --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "react",
    "react-table",
    "react-data-table",
    "table",
    "data-table",
    "toolkit",
    "table-toolkit",
    "datagrid",
    "server-side",
    "server-side-pagination",
    "server-side-filtering",
    "pagination",
    "sorting",
    "filter",
    "column-filter",
    "csv",
    "export",
    "url-sync",
    "saved-views",
    "actions",
    "query-toolbar",
    "action-bar",
    "bulk-actions",
    "typescript",
    "business-app",
    "admin",
    "dashboard",
    "admin-panel",
    "crud"
  ],
  "author": "RowaKit Team",
  "license": "MIT",
  "homepage": "https://github.com/midflow/RowaKit/tree/main/packages/table#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midflow/RowaKit.git",
    "directory": "packages/table"
  },
  "bugs": {
    "url": "https://github.com/midflow/RowaKit/issues"
  },
  "directories": {
    "example": "examples"
  },
  "publishConfig": {
    "access": "public"
  }
}
